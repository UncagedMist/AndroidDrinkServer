<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProductActivity"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/img_browse"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_terrain_black_24dp"/>

    <EditText
        android:id="@+id/edt_drink_name"
        android:hint="Category Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_drink_price"
        android:hint="Drink Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_menu"
        app:ms_background_color="#88FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btn_update"
            android:text="UPDATE"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_delete"
            android:text="DELETE"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>